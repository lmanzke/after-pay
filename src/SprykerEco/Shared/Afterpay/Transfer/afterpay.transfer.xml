<?xml version="1.0"?>
<transfers xmlns="spryker:transfer-01"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="spryker:transfer-01 http://static.spryker.com/transfer-01.xsd">

    <transfer name="AfterpayPayment">
        <property name="fkSalesOrder" type="int" />
        <property name="paymentMethod" type="string" />
        <property name="idPaymentReference" type="string" />
        <property name="idPaymentRegistration" type="string" />
    </transfer>

    <transfer name="AfterpayRequest">
        <property name="auth" type="HeidelpayAuthentication" />
        <property name="async" type="HeidelpayAsync" />
        <property name="customerAddress" type="HeidelpayCustomerAddress" />
        <property name="customerPurchase" type="HeidelpayCustomerPurchase" />
        <property name="idPaymentReference" type="string" />
        <property name="idPaymentRegistration" type="string" />
        <property name="paymentMethod" type="string" />
    </transfer>

    <transfer name="AfterpayResponse">
        <property name="isSuccess" type="bool"/>
        <property name="isError" type="bool"/>
        <property name="isPending" type="bool"/>
        <property name="idSalesOrder" type="int"/>
        <property name="idPaymentReference" type="string"/>
        <property name="processingCode" type="string"/>
        <property name="idTransactionUnique" type="string"/>
        <property name="paymentFormUrl" type="string"/>
        <property name="payload" type="string"/>
        <property name="resultCode" type="string"/>
        <property name="customerRedirectUrl" type="string"/>
    </transfer>

    <transfer name="AfterpayAvailablePaymentMethodsResponse">
        <property name="paymentMethods" type="AfterpayPaymentMethods" />
        <property name="riskCheckCode" type="string" />
    </transfer>

    <transfer name="AfterpayPaymentMethods">
        <property name="invoice" type="AfterpayPaymentMethodInvoice" />
        <property name="installment" type="AfterpayPaymentMethodInstallment" />
    </transfer>

    <transfer name="AfterpayPaymentMethodInvoice">
        <property name="type" type="string" />
    </transfer>

    <transfer name="AfterpayPaymentMethodInstallment">
        <property name="type" type="string" />
        <property name="isDirectDebitAvailable" type="bool" />
    </transfer>

    <transfer name="Payment">
        <property name="afterpayInvoice" type="AfterpayPayment"/>
    </transfer>

</transfers>
